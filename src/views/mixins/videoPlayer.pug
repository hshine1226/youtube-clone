mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video(src=video.src)
        
        .videoPlayer__controls
            .videoPlayer__column
                span#jsPlayButton
                    i.fas.fa-play
            .videoPlayer__column
                progress(id="js-progressBar", value="0", max="100")            
            .videoPlayer__column
                .videoPlayer__time-container
                    span#jsCurrentTime 00:00 
                    span / 
                    span#jsTotalTime 00:00
                .videoPlayer__volume-container#jsVolumeContainer
                    span#jsVolumeBtn
                        i.fas.fa-volume-up
                    input.videoPlayer__volume#jsVolume(type="range", min="0", max="1", step="0.01", value="0.5")    
                span#jsFullScreen
                    i.fas.fa-expand
                